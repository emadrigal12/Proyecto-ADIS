@{
    ViewData["Title"] = "CalificacionesController";
}

<head>
    <link rel="stylesheet" href="~/css/Calificaciones.css" />
</head>

<button id="btnCalificarAsignaciones">Calificar Asignaciones</button>

<div id="containerBotones">
    <button id="btnCalificarGrupos">Calificar Grupos</button>
    <button id="btnCalificarEstudiantes">Calificar Estudiantes Individualmente</button>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $("#btnCalificarGrupos").click(function () {
            window.location.href = "/Asignacion/Grupal";
        });

        $("#btnCalificarEstudiantes").click(function () {
            window.location.href = "/Asignacion/Individual";
        });
    });
</script>