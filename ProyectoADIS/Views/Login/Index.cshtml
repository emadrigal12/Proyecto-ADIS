@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Form</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/toastr.min.css">
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title titleLogin text-lg-center">Bienvenido a Canvas ULACIT</h3>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="form-group">
                                <label for="username">Usuario:</label>
                                <input type="text" class="form-control" id="txtUsuario" placeholder="Ingresa tu usuario">
                            </div>
                            <div class="form-group">
                                <label for="password">Contraseña:</label>
                                <input type="password" class="form-control" id="txtContrasena" placeholder="Ingresa tu contraseña">
                            </div>
                            <div id="mensajeError" class="text-danger mb-4"></div>
                            <button type="button" onclick="iniciarSesion()" class="btn btn-purple btn-block">Iniciar Sesión</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="modal fade" id="actualizarContra" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="actualizarContraLabel">Cambie su contraseña</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="contraActual" class="col-form-label">Contraseña Actual:</label>
                            <input type="password" class="form-control" id="contraActual">
                        </div>
                        <div class="form-group">
                            <label for="contraNueva" class="col-form-label">Nueva Contraseña:</label>
                            <input type="password" class="form-control" id="contraNueva">
                        </div>
                        <div class="form-group">
                            <label for="confirmarContra" class="col-form-label">Confirmar Contraseña:</label>
                            <input type="password" class="form-control" id="confirmarContra">
                        </div>
                        <div id="mensajeErrorContra" class="text-danger mb-4"></div>
                        
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-purple" onclick="ActualizarContrasena()">Guardar cambios</button>
                </div>
            </div>
        </div>
    </div>

</body>
</html>


@section Scripts {
    <script src="~/js/login/login.js"></script>
    <script src="~/js/toastr.min.js"></script>
}



    