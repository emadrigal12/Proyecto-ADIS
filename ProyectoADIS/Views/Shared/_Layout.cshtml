<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Proyecto-ADIS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EFCoreWithAsp.netCore.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <div class="col-auto col-md-2 col-xl-1 px-sm-2 px-0" style="background-color: #402c54;" id="sidebar">
                <div class="d-flex flex-column align-items-center align-items-sm-start px-1 pt-2 text-white min-vh-100">
                    <a href="/Home" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                        <img src="https://instructure-uploads.s3.amazonaws.com/account_231950000000000001/attachments/1893/LogoUlacit-Blanco.png" alt="Logo" style="max-width: 100px;">
                    </a>
                    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Index" class="nav-link align-middle px-0 text-white">
                                <i class="fs-4 bi bi-house"></i><span class="ms-1 d-none d-sm-inline">Inicio</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Portfolio" asp-action="Index" class="nav-link align-middle px-0 text-white">
                                <i class="fs-4 bi bi-file-earmark-arrow-up"></i><span class="ms-1 d-none d-sm-inline">Publicar</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Curso" asp-action="Index" class="nav-link align-middle px-0 text-white">
                                <i class="fs-4 bi bi-journal-text"></i><span class="ms-1 d-none d-sm-inline">Cursos</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Tarea" asp-action="Index" class="nav-link align-middle px-0 text-white">
                                <i class="fs-4 bi bi-list-task"></i><span class="ms-1 d-none d-sm-inline">Tareas</span>
                            </a>
                        </li>
                        

                    </ul>
                    <hr class="d-sm-none"> <!-- Añadido -->
                </div>
            </div>
            <div class="col py-3">
                <button class="btn btn-primary d-sm-none m-2" id="menu-toggle" style="background-color: #70009c; color: #fff"><i class="bi bi-list"></i></button> <!-- Añadido -->
                @RenderBody()
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - EFCoreWithAsp.netCore - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        $(document).ready(function () {
            $('#menu-toggle').click(function () {
                $('#sidebar').toggle('slide');
            });
        });
    </script>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
